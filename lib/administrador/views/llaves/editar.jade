extends ../layout.jade
block contenido
	section(class="col-md-12 jumbotronformularios")
		div(class="col-sm-12 jumbotronformularios  container ")
			center
				h4(class="ptitulo") Editar llaves API de Twitter
	section(class="col-md-12")
		div(class="col-sm-2")
		div(class="col-sm-8 formularios container")
			each llave in llaves
				form(method="post" action="/home/llaves/editar/p" class="form-inline")
					input(type="hidden" name = "id" value=llave._id)

					div(class="col-sm-12 form-group")
						label Consumer Key:
						input(type="text" class = " divformulario input-md chat-input" name="consumer" id = "consumer" value=llave.s_consumerkey required pattern="[A-Za-z0-9]{25,25}" title="consumerKey 25 caracteres, sin espacios en blanco")
					div(class="col-sm-11 form-group ")
						br
					div(class=" col-sm-12 form-group")
						label Consumer Secret:
						input(type="text" class = "divformulario input-md chat-input"  name="consumersecret" id = "consumersecret" value=llave.s_consumersecret pattern="[A-Za-z0-9]{50,50}" title="consumerSecret 50 caracteres, sin espacios en blanco")
					br
					div(class="col-sm-6 form-group " )
						br
						center
							button(class="btn btn-primary login-form-control " type="submit") Guardar
					div(class="col-sm-6 form-group")
						br
						center
							a(class=" btn btn-primary" href="/home/llaves/lista") Regresar
	section(class="col-md-12 footer")
		center
			p(class="small") © 2017 Copyright Grupo de Investigación Gesdatos - Universidad Distrital Francisco José de Caldas
	script(src="/bootstrap/js/jquery.js")
	script(src="/bootstrap/js/bootstrap.min.js")