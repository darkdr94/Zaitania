extends ../layout.jade
block contenido
	section(class="col-md-12 jumbotronformularios")
		div(class="col-sm-8  jumbotronformularios container")
			h4(class="ptitulo") Gestionar Usuarios
		div(class="col-sm-3  jumbotronformularios container")
			h4
				a(href="/home/usuario/crear" class="link pull-right") Agregar
	aside(class="col-md-4 ")
		div(class="list-group")
			a(href="/home/usuario/editar" class=" list-group-item active") Cambiar contraseña
			a(href="/home/parametro/lista" class=" list-group-item") Cambiar número máximo de Tweets
			a(href="/home/llaves/lista" class=" list-group-item ") Gestionar claves
			if (tipousuario=="superadmin")
				a(href="/home/recursos" class=" list-group-item" ) Gestionar recursos
				a(href="/home/usuario/lista" class=" list-group-item") Gestionar usuarios
	section(class="col-md-8")
		div(class="form-group col-sm-11 container")
			div(class="table-responsive")
				table(class="table table-bordered table-hover table-condensed")
					thead
						tr(class="titulo_tabla")
							th
								div(class="tablaP")
									center
										p(class="small") Nombre
							th
								div(class="tablaP")
									center
										p(class="small") Username
							th
								div(class="tablaP")
									center
										p(class="small") Rol
							th
					tbody
						each usuario in usuarios
							tr
								form(method="post" action="/home/usuario/eliminar" class="form-inline")
										input(type="hidden" name = "idusuario" value=usuario._id)
										td
											div(class="tablaP")
												center
													p(class="small")=usuario.s_name
										td
											div(class="tablaP")
												center
													p(class="small")=usuario.s_user_name
										td
											div(class="tablaP")
												center
													p(class="small")=usuario.s_tipo_usuario
										td
											div(class="tablaP")
												center
													button( type="submit" class="btn2" ) Eliminar
		if confirmacion
			div(class="container col-sm-12")
				each msm in confirmacion					
					center
						strong
							p!= msm
	section(class="col-md-12 footer")
		center
			p(class="small") © 2017 Copyright Grupo de Investigación Gesdatos - Universidad Distrital Francisco José de Caldas
	script(src="/bootstrap/js/jquery.js")
	script(src="/bootstrap/js/bootstrap.min.js")