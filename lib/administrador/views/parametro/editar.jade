extends ../layout.jade
block contenido
	section(class="col-md-12 jumbotronformularios")
		div(class="col-sm-12 jumbotronformularios container")
			center
				h4 Número máximo de Tweets
					p(class="Small") mínimo 200, máximo 10000
		br
	aside(class="col-md-2")
	section(class="col-md-8")
		div(class="col-sm-12 container formularios")
			form(action="/home/parametro/editar/p" method="post")
				input(type="hidden" name = "id" value="#{numMax._id}")
				div(class="col-sm-12 container")
					p(class="col-sm-3")
					label(class="col-sm-3") Máximo de tweets:
					input(type="number" name ="numMax" class="col-sm-3" value="#{numMax.n_maximo_tweet}")
				div(class="col-sm-6 form-group " )
					br
					center
						button(class="btn btn-primary login-form-control " type="submit") Guardar
				div(class="col-sm-6 form-group")
					br
					center
						a(class=" btn btn-primary" href="/home/parametro/lista") Regresar 
	section(class="col-md-12 footer")
		center
			p(class="small") © 2017 Copyright Grupo de Investigación Gesdatos - Universidad Distrital Francisco José de Caldas
	script(src="/bootstrap/js/jquery.js")
	script(src="/bootstrap/js/bootstrap.min.js")